<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.summertaker.akb48guide.janken.JankenMainActivity"
                tools:showIn="@layout/janken_main_activity">

    <RelativeLayout
        android:id="@+id/loLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_background">

        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/progress_bar_circle"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/loContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_teal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/loTop"
                layout="@layout/janken_main_top"/>

            <LinearLayout
                android:id="@+id/loRemainMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/loTop"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cvNextMember"
                    android:layout_width="47dp"
                    android:layout_height="60dp"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#eee">

                        <ImageView
                            android:id="@+id/ivNextMemberPicture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/blank"
                            android:scaleType="centerCrop"/>

                        <ProgressBar
                            android:id="@+id/pbNextMemberPictureLoading"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="다음 멤버"
                    android:textColor="#b2dfdb"
                    android:textSize="13sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tvRemainMemberCounterIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/fa_circle"
                        android:textColor="#44000000"
                        android:textSize="55sp"/>

                    <TextView
                        android:id="@+id/tvRemainMemberCounterText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/blank"
                        android:textColor="#ddd"
                        android:textSize="13sp"
                        android:textStyle="italic"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="남은 멤버"
                    android:textColor="#b2dfdb"
                    android:textSize="13sp"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cvMatchMember"
                android:layout_width="190dp"
                android:layout_height="230dp"
                android:layout_below="@id/loTop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/loMatchMemberPicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ddd">

                    <ImageView
                        android:id="@+id/ivMatchMemberPicture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/blank"
                        android:scaleType="centerCrop"
                        android:src="@drawable/transparent"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvMatchMemberPictureCaption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="#99000000"
                        android:gravity="center"
                        android:paddingBottom="7dp"
                        android:paddingTop="7dp"
                        android:singleLine="true"
                        android:textColor="#fff176"/>

                    <RelativeLayout
                        android:id="@+id/loMatchMemberPictureLoading"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/tvMatchMemberPictureCaption"
                        android:gravity="center">

                        <ProgressBar
                            android:id="@+id/pbMatchMemberPictureLoading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/progress_bar_circle"/>

                        <TextView
                            android:id="@+id/tvMatchMemberActionIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fa_hand_scissors_o"
                            android:textColor="#555"
                            android:textSize="80sp"
                            android:visibility="gone"/>

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/loGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvMatchMember"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="화면을 터치하면 3초가 표시됩니다."
                    android:textColor="#fff"
                    android:textStyle="italic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="3초 후 가위 바위 보 중 하나를 터치하세요."
                    android:textColor="#fff"
                    android:textStyle="italic"/>

            </LinearLayout>

            <TextView
                android:id="@+id/loReadyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvMatchMember"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:text="화면을 터치해서 시작하세요."
                android:textColor="#fff"
                android:textStyle="italic"
                android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/loUserAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="invisible">

                <LinearLayout
                    android:id="@+id/loUserActionScissors"
                    style="@style/SuccessButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/tvUserActionScissorsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fa_hand_scissors_o"
                        android:textColor="#fff"
                        android:textSize="30sp"/>

                    <TextView
                        android:id="@+id/tvUserActionScissorsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/action_scissors"
                        android:textColor="#fff"/>

                </LinearLayout>

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:id="@+id/loUserActionRock"
                    style="@style/SuccessButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/tvUserActionRockIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fa_hand_rock_o"
                        android:textColor="#fff"
                        android:textSize="30sp"/>

                    <TextView
                        android:id="@+id/tvUserActionRockText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/action_rock"
                        android:textColor="#fff"/>

                </LinearLayout>

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:id="@+id/loUserActionPaper"
                    style="@style/SuccessButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/tvUserActionPaperIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fa_hand_paper_o"
                        android:textColor="#fff"
                        android:textSize="30sp"/>

                    <TextView
                        android:id="@+id/tvUserActionPaperText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/action_paper"
                        android:textColor="#fff"/>

                </LinearLayout>

            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/hsMyMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/loUserAction"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp">

                <LinearLayout
                    android:id="@+id/loMyMemberList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/loMyMemberCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/hsMyMember"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvMyMemberCounterIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/fa_heart"
                    android:textColor="#f44336"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/tvMyMemberCounterText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingBottom="3dp"
                    android:text="@string/blank"
                    android:textColor="#fff"
                    android:textStyle="italic|bold"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vwScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/loReadyCounter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvReadyCounterBorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/fa_circle"
                android:textColor="#333"
                android:textSize="120sp"/>

            <TextView
                android:id="@+id/tvReadyCounterOuter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/fa_circle"
                android:textColor="#b71c1c"
                android:textSize="105sp"/>

            <TextView
                android:id="@+id/tvReadyCounterInner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/fa_circle"
                android:textColor="#f44336"
                android:textSize="70sp"/>

            <TextView
                android:id="@+id/tvReadyCounterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/blank"
                android:textColor="#fff"
                android:textSize="40sp"
                android:textStyle="bold|italic"/>

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
